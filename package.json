{
   "name": "kleio",
   "displayName": "Time Link Bundle",
   "keywords": ["TimeLink", "MHK", "Kleio", "Time Link"],
   "categories": ["Extension Packs", "Language Packs"],
   "description": "Time Link (formerly MHK / TimeLink) is a web application that manages databases for micro-historical research.",
   "version": "1.0.5",
   "publisher": "time-link",
   "engines": {
      "vscode": "^1.38.0"
   },
   "repository": {
      "type": "git",
      "url": "https://github.com/time-link/timelink-vscode.git"
   },
   "icon": "images/icon.png",
   "activationEvents": [
      "onLanguage:kleio",
      "onView:fileExplorer"
   ],
   "main": "./out/extension.js",
   "contributes": {
      "configuration": {
         "type": "object",
         "title": "Time Link",
         "properties": {
            "timelink.showAllFilesInExplorer": {
               "type": "boolean",
               "default": false,
               "description": "Show all files in Time Link Explorer."
            },
            "timelink.collapsibleStateExpanded": {
               "type": "boolean",
               "default": false,
               "description": "Launch Status Tree Views Expanded."
            }
         }
      },
      "menus": {
         "view/title": [
            {
               "command": "extension.reloadTranslationInfo",
               "group": "navigation",
               "when": "view == fileExplorer || view == translationNeededExplorer || view == fileWithErrorsExplorer || view == fileWithWarningsExplorer || view == importReadyExplorer"
            }
         ],
         "view/item/context": [
            {
               "command": "extension.translateFile",
               "when": "viewItem == fileCli"
            },
            {
               "command": "revealFileInOS"
            }
         ]
      },
      "languages": [
         {
            "id": "kleio",
            "aliases": [
               "Kleio",
               "kleio"
            ],
            "extensions": [
               ".cli",
               ".kleio",
               ".rpt",
               ".CLI",
               ".KLEIO",
               ".org",
               ".old"
            ],
            "configuration": "./language-configuration.json"
         }
      ],
      "commands": [
         {
            "command": "extension.translateFile",
            "title": "Translate File"
         },
         {
            "command": "revealFileInOS",
            "title": "Open Containing Folder"
         },
         {
            "command": "extension.reloadTranslationInfo",
            "title": "Refresh",
            "icon": {
               "light": "resources/light/refresh.svg",
               "dark": "resources/dark/refresh.svg"
            }
         }
      ],
      "grammars": [
         {
            "language": "kleio",
            "scopeName": "source.kleio",
            "path": "./syntaxes/Kleio.tmLanguage"
         }
      ],
      "snippets": [
         {
            "language": "kleio",
            "path": "./snippets/snippets.json"
         }
      ],
      "keybindings": [
         {
            "key": "ctrl+alt+k",
            "mac": "shift+cmd+k",
            "command": "editor.action.insertSnippet",
            "when": "editorTextFocus",
            "args": {
               "langId": "kleio",
               "name": "kleio"
            }
         },
         {
            "key": "ctrl+alt+t",
            "mac": "shift+cmd+t",
            "command": "extension.translateFile",
            "when": "editorTextFocus"
         }
      ],
      "viewsContainers": {
         "activitybar": [
            {
               "id": "package-explorer",
               "title": "Time Link",
               "icon": "images/icon_extension.png"
            }
         ]
      },
      "views": {
         "package-explorer": [
            {
               "id": "fileExplorer",
               "name": "Time Link File Explorer"
            },
            {
               "id": "translationNeededExplorer",
               "name": "Translation needed"
            },
            {
               "id": "fileWithErrorsExplorer",
               "name": "With errors"
            },
            {
               "id": "fileWithWarningsExplorer",
               "name": "With warnings"
            },
            {
               "id": "importReadyExplorer",
               "name": "Ready for import"
            }
         ],
         "explorer": [
         ]
      }
   },
   "scripts": {
      "vscode:prepublish": "webpack --mode production",
      "webpack": "webpack --mode development",
      "webpack-dev": "webpack --mode development --watch",
      "test-compile": "tsc -p ./",
      "compile": "tsc -p ./",
      "watch": "tsc -watch -p ./",
      "pretest": "npm run compile",
      "test": "node ./out/test/runTest.js"
   },
   "devDependencies": {
      "@types/glob": "^7.1.1",
      "@types/mkdirp": "^0.5.2",
      "@types/mocha": "^5.2.6",
      "@types/node": "^10.12.21",
      "@types/rimraf": "^2.0.3",
      "@types/vscode": "^1.38.0",
      "glob": "^7.1.4",
      "mocha": "^6.1.4",
      "ts-loader": "^6.2.1",
      "tslint": "^5.12.1",
      "typescript": "^3.3.1",
      "vscode-test": "^1.0.2",
      "webpack": "^4.42.1",
      "webpack-cli": "^3.3.11"
   },
   "dependencies": {
      "jayson": "^3.2.0",
      "request": "^2.88.0",
      "request-promise": "^4.2.4"
   }
}
