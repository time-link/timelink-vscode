{
   "name": "kleio",
   "displayName": "Time Link Bundle",
   "description": "Time Link is a web application that manages databases for micro-historical research.",
   "version": "0.4.2",
   "publisher": "timelink",
   "engines": {
      "vscode": "^1.38.0"
   },
   "repository": {
      "type": "git",
      "url": "https://github.com/time-link/timelink-vscode.git"
   },
   "categories": [
      "Programming Languages"
   ],
   "icon": "images/icon.png",
   "activationEvents": [
      "onCommand:extension.helloWorld",
      "onLanguage:kleio",
      "onView:fileExplorer",
      "onView:statusProvider"
   ],
   "main": "./out/extension.js",
   "contributes": {
      "languages": [
         {
            "id": "kleio",
            "aliases": [
               "Kleio",
               "kleio"
            ],
            "extensions": [
               ".cli",
               ".kleio",
               ".rpt",
               ".CLI",
               ".KLEIO",
               ".org",
               ".old"
            ],
            "configuration": "./language-configuration.json"
         }
      ],
      "commands": [
         {
            "command": "extension.helloWorld",
            "title": "Hello World"
         }
      ],
      "grammars": [
         {
            "language": "kleio",
            "scopeName": "source.kleio",
            "path": "./syntaxes/Kleio.tmLanguage"
         }
      ],
      "snippets": [
         {
            "language": "kleio",
            "path": "./snippets/snippets.json"
         }
      ],
      "keybindings": [
         {
            "key": "ctrl+alt+k",
            "mac": "shift+cmd+k",
            "command": "editor.action.insertSnippet",
            "when": "editorTextFocus",
            "args": {
               "langId": "kleio",
               "name": "kleio"
            }
         }
      ],
      "viewsContainers": {
         "activitybar": [
            {
               "id": "package-explorer",
               "title": "Time Link",
               "icon": "images/icon.svg"
            }
         ]
      },
      "views": {
         "package-explorer": [
            {
               "id": "fileExplorer",
               "name": "Time Link File Explorer"
            },
            {
               "id": "statusProvider",
               "name": "Kleio Files Status"
            }
         ],
         "explorer": [
            {
               "id": "fileExplorer",
               "name": "Time Link File Explorer"
            }
         ]
      }
   },
   "scripts": {
      "vscode:prepublish": "npm run compile",
      "compile": "tsc -p ./",
      "watch": "tsc -watch -p ./",
      "pretest": "npm run compile",
      "test": "node ./out/test/runTest.js"
   },
   "devDependencies": {
      "@types/glob": "^7.1.1",
      "@types/mkdirp": "^0.5.2",
      "@types/mocha": "^5.2.6",
      "@types/node": "^10.12.21",
      "@types/rimraf": "^2.0.3",
      "@types/vscode": "^1.38.0",
      "glob": "^7.1.4",
      "mocha": "^6.1.4",
      "tslint": "^5.12.1",
      "typescript": "^3.3.1",
      "vscode-test": "^1.0.2"
   },
   "dependencies": {
      "request": "^2.88.0",
      "request-promise": "^4.2.4"
   }
}
